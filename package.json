{
  "name": "server",
  "version": "1.0.4",
  "private": true,
  "description": "Automated Express Backend",
  "main": "src/index.js",
  "scripts": {
    "docker": "docker-compose up --wait",
    "migrator": "yarn ts-node src/shared/db/migrator.ts",
    "build": "yarn webpack",
    "watch": "NODE_ENV=development yarn webpack watch",
    "mon": "yarn nodemon -r tsconfig-paths/register -q src/index.ts",
    "concu": "concurrently \"yarn watch\" \"yarn mon\"",
    "dev": "yarn install && yarn docker && yarn tsc --build && yarn concu",
    "start": "yarn run dev",
    "test": "yarn docker && yarn jest",
    "clean": "rm -rf node_modules yarn.lock dist build",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.1.2",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^7.7.5",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.1.4",
    "pg": "^8.8.0",
    "sequelize": "^6.24.0",
    "socket.io": "^4.5.4",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "umzug": "^3.2.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.17",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "babel-jest": "^29.1.2",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "husky": "^8.0.2",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "multer": "^1.4.5-lts.1",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "nodemon": "^2.0.20",
    "openapi-types": "^12.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  }
}
